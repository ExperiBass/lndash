+modal(`pageErrorsModal`, "Page Errors")
	each item, itemIndex in pageErrors
		.card.shadow-sm(class=(itemIndex < (pageErrors.length - 1) ? "mb-3" : false))
			.card-header
				h6.mb-0 Error ##{(itemIndex + 1).toLocaleString()}
			.card-body
				h6 Error Details
				pre
					code.json #{JSON.stringify(item.error, null, 4)}

				if (item.error.stack)
					hr
					h6 Stacktrace
					pre
						code.json #{item.error.stack}

				if (item.error.userData)
					hr

					h4.h6 User Data
					pre
						code.json #{JSON.stringify(error.userData, null, 4)}