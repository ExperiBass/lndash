tr.word-wrap
	th.text-end.fw-light #{nodeTableIndex.toLocaleString()}


	td
		- var card_node_pubkey = nodeInfo.node.pub_key;
		include ./node-card.pug


	td
		if (nodeInfo.node.addresses && nodeInfo.node.addresses.length > 0)
			+netAddress(nodeInfo.node.addresses[0].addr)

		else
			span -

	
	td.text-end
		span #{parseInt(nodeInfo.num_channels).toLocaleString()}


	td.text-end
		+btcValue(nodeInfo.total_capacity)


	td.text-end
		if (nodeInfo.node.last_update == 0)
			span -

		else
			+date(nodeInfo.node.last_update, "human")