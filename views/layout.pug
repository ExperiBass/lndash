include ./includes/shared-mixins.pug

doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0, shrink-to-fit=no")
		
		if (true || session.uiTheme && session.uiTheme == "dark")
			link(rel="stylesheet", href="/style/dark.css")

		else
			link(rel="stylesheet", href="/style/light.css", integrity="")
		

		link(rel="icon", type="image/png", href="/img/logo/lightning.png")

		block headContent
			title #{config.siteInfo.title}

		+sharedScriptTags
		
	body.bg-background
		script.
			var documentReadyFunctions = [];


		header.py-3.border-bottom.border-secondary.text-bg-dark
			.container-xxxl.d-grid.gap-3.align-items-center
				a.navbar-brand.col-sm-3.col-md-1.me-0(href="/")
					img.header-image(src="/img/logo/lightning.svg")
					span #{config.siteInfo.title}

		
		.container.bg-main
			.d-flex.flex-row.ms-n3
				.d-flex.flex-column.flex-fill-1.p-3.text-bg-dark(style="width: 225px;")
					div
						include ./includes/menu-node-list.pug

					hr.my-2

					include ./includes/navbar.pug

				.flex-grow-1
					.container-fluid
						main(role="main")
							if (userMessage)
								div(class="alert shadow-sm", class=(userMessageType ? ("alert-"  + userMessageType) : "alert-info"), role="alert")
									span !{userMessage}

							else if (session.userMessage)
								div(class="alert shadow-sm", class=(session.userMessageType ? ("alert-"  + session.userMessageType) : "alert-info"), role="alert")
									span !{session.userMessage}


							.border-bottom.px-3.py-3.mt-2.mb-4.text-bg-dark.ms-n2
								nav(aria-label="breadcrumb")
									ol.breadcrumb.mb-0
										li.me-2 &raquo;
										block breadcrumb
							
							block content
			

		if (false)
			nav(class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow")
				//div(class="xcontainer")
				a(class="navbar-brand col-sm-3 col-md-1 me-0", href="/")
					img(src="/img/logo/lightning.svg", class="header-image")
					span #{config.siteInfo.title}
					
				if (client)
					if (false)
						ul(class="navbar-nav me-auto")
							if (config.headerDropdownLinks)
								li(class="nav-item dropdown")
									a(class="nav-link dropdown-toggle", href="javascript:void(0)", role="button", data-bs-toggle="dropdown", aria-haspopup="true", aria-expanded="false") 
										span  #{config.headerDropdownLinks.title}
									div(class="dropdown-menu", aria-label=(config.headerDropdownLinks.title + " Items"))
										each item in config.headerDropdownLinks.links
											a(class="dropdown-item", href=item.url)
												img(src=item.imgUrl, style="width: 24px; height: 24px; margin-right: 8px;", alt=item.name)
												span  #{item.name}
					

					form(method="get", action="/search", class="form-inline me-3")
						.input-group.input-group-sm
							input(type="text", class="form-control form-control-sm", name="query", placeholder="pub key, channel id, alias, address", value=(query), style="width: 300px;")

							button.btn.btn-primary(type="submit")
								i.fas.fa-search

					ul(class="navbar-nav")
						li(class="nav-item dropdown")
							a(class="nav-link dropdown-toggle", href="javascript:void(0)", id="navbarDropdown", role="button", data-bs-toggle="dropdown", aria-haspopup="true", aria-expanded="false") 
								i(class="fas fa-cog me-1")
							div(class="dropdown-menu", aria-labelledby="navbarDropdown")
								if (coinConfig.currencyUnits)
									span(class="dropdown-header") Currency Units
									each item in coinConfig.currencyUnits
										a(class="dropdown-item", href=("/changeSetting?name=currencyFormatType&value=" + item.values[0]))
											each valueName in item.values
												if (currencyFormatType == valueName)
													i(class="fas fa-check")
											span  #{item.name}

								span(class="dropdown-header") Theme
								a(class="dropdown-item", href="/changeSetting?name=uiTheme&value=light")
									if (session.uiTheme == "light" || session.uiTheme == "")
										i(class="fas fa-check")
									span  Light
								a(class="dropdown-item", href="/changeSetting?name=uiTheme&value=dark")
									if (session.uiTheme == "dark")
										i(class="fas fa-check")
									span  Dark

						li(class="nav-item dropdown")
							a(class="nav-link dropdown-toggle", href="javascript:void(0)", id="navbarDropdown", role="button", data-bs-toggle="dropdown", aria-haspopup="true", aria-expanded="false") 
								if (session.admin)
									i(class="fas fa-user me-1") 
									span  Admin
								else
									i(class="far fa-user me-1") 
									span  Guest

							div(class="dropdown-menu", aria-labelledby="navbarDropdown")
								if (session.admin)
									a(class="dropdown-item", href="/logout")
										span  Logout
								else
									a(class="dropdown-item", href="/login")
										span  Login


				

			
		
		
		
		script(src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js", integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb", crossorigin="anonymous")
		script(defer, src="https://use.fontawesome.com/releases/v5.2.0/js/all.js", integrity="sha384-4oV5EgaV02iISL2ban6c/RmotsABqE4yZxZLcYMAdG7FAPsyHYAPpywE9PJo+Khy", crossorigin="anonymous")

		script(type="text/javascript", src="https://cdn.jsdelivr.net/npm/jdenticon@3.2.0")

		script(src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js")
		
		script.
			$(document).ready(function() {
				$('[data-bs-toggle="tooltip"]').tooltip();
				$('[data-bs-toggle="popover"]').popover({html:true});

				for (var i = 0; i < documentReadyFunctions.length; i++) {
					documentReadyFunctions[i]();
				}
			});

			hljs.initHighlightingOnLoad();
		
		block endOfBody
