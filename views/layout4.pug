	if (session.uiTheme && session.uiTheme == "dark")
		link(rel="stylesheet", href="/css/dark-touchups.css", integrity="")


	link(rel="icon", type="image/png", href="/img/logo/app-minimized.png")

	script(src="/js/jquery.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=")

	block headContent
		title #{config.siteInfo.title}

body.sidebar-lg-show.bg-main.app.header-fixed.sidebar-fixed.sidebar-lg-show
	script.
		var documentReadyFunctions = [];

	header.app-header.navbar.bg-main.p-0(class=((session.uiTheme && session.uiTheme == "dark") ? "bg-dark" : false))
		button.navbar-toggler.sidebar-toggler.d-lg-none.me-auto(type='button' data-bs-toggle='sidebar-show')
			span.navbar-toggler-icon
		a.navbar-brand(href='/')
			if (session.uiTheme && session.uiTheme == "dark")
				img.navbar-brand-full(src='/img/logo/app-dark.png' width='96' height='32' alt='LND Admin')
			else
				img.navbar-brand-full(src='/img/logo/app.png' width='96' height='32' alt='LND Admin')

			//span.navbar-brand-full LND Admin
			img.navbar-brand-minimized(src='/img/logo/app-minimized.png' width='32' height='32' alt='LND Admin')

		button.navbar-toggler.sidebar-toggler.d-md-down-none(type='button' data-bs-toggle='sidebar-lg-show')
			span.navbar-toggler-icon

		if (lndRpc)
			ul.nav.navbar-nav.d-md-down-none
				if (false)
					li.nav-item.px-3
						a.nav-link(href='/') Dashboard
					li.nav-item.px-3
						a.nav-link(href='#') Users
					li.nav-item.px-3
						a.nav-link(href='#') Settings

				span.ms-4.me-2.fw-bold LND Node

				li.nav-item
					if (lndRpc && fullNetworkDescription != null)
						a.nav-link.btn.btn-light.border.bg-light.px-3.py-1(data-bs-toggle='dropdown' href='javascript:void(0)' role='button' aria-haspopup='true' aria-expanded='false')
							.clearfix
								.float-left.me-2
									- var node_pubkey = lndRpc.internal_pubkey;
									- var node_icon_size = "2.0em";
									include includes/node-icon.pug
									- var node_icon_size = null;

								.float-left.pt-1
									span.text-body.dropdown-toggle #{lndRpc.internal_alias}

						.dropdown-menu.py-2(style="min-width: 23rem;")
							each lndNodeInfo, lndNodeIndex in global.adminCredentials.lndNodes
								small.border-bottom
									if (lndConnections.byIndex[lndNodeIndex] != null)
										- var lndConn = lndConnections.byIndex[lndNodeIndex];
										- var node_pubkey = lndConn.internal_pubkey;

										if (fullNetworkDescription)
											a.dropdown-item.rounded-0.px-3.py-2(href=('/connect-lnd?index=' + lndNodeIndex), onclick="$('#switchLndModal').modal()")
												.clearfix
													.float-left.me-3
														- var node_icon_size = "2.5rem;"
														include includes/node-icon.pug

													.float-left
														span.fw-bold
															include includes/node-pubkey.pug
														if (lndConn == lndRpc)
															i.fas.fa-check.text-success.ms-2
														br
														span.fw-bold Alias: 
														span 
															- var node_alias = lndConn.internal_alias;
															include includes/node-alias.pug
														br
														span.fw-bold Address: 
														span
															if (fullNetworkDescription.nodeInfoByPubkey[node_pubkey] && fullNetworkDescription.nodeInfoByPubkey[node_pubkey].node && fullNetworkDescription.nodeInfoByPubkey[node_pubkey].node.addresses)
																each networkAddress, networkAddressIndex in fullNetworkDescription.nodeInfoByPubkey[node_pubkey].node.addresses
																	if (networkAddressIndex > 0)
																		br

																	- var node_network_address = networkAddress.addr;
																	include includes/node-network-address.pug

															else
																span.text-danger ?
														br
														span.fw-bold Version: 
														- var versionParts = lndConn.internal_version.split(" ");

														if (versionParts.length > 0)
															span.word-wrap.border-dotted(title=lndConn.internal_version data-bs-toggle="tooltip") #{versionParts[0]}
														else
															span.word-wrap #{versionParts[0]}

											.dropdown-divider

							a.dropdown-item.rounded-0.px-3.py-2(href='/manage-nodes') Manage LND Nodes...


		else
			ul.nav.navbar-nav.d-md-down-none
				li.nav-item.px-3
					a.nav-link.text-primary(href='/manage-nodes') Manage LND Nodes
									



		ul.nav.navbar-nav.ms-auto.me-2
			if (lndRpc)
				li.nav-item.d-md-down-none
					.d-none.d-md-block(style="width: 350px;")
					form.me-3(method="get" action="/search")
						.input-group.input-group-sm
							input.form-control.form-control-sm(type="text", name="query", placeholder="public key, channel id, alias, color, or address", value=query)
								
							button.btn.btn-primary(type="submit")
								i.fas.fa-search
					

		if (true)
			- var userIconClassEx = (session.admin ? "fas" : "far")
			button.navbar-toggler.aside-menu-toggler.d-md-down-none(type='button' data-bs-toggle='aside-menu-lg-show')
				i.fas.fa-user-circle.text-body.fa-2x.me-3(class=userIconClassEx)
				//span.navbar-toggler-icon

			button.navbar-toggler.aside-menu-toggler.d-lg-none(type='button' data-bs-toggle='aside-menu-show')
				i.fas.fa-user-circle.text-body.fa-2x.me-3(class=userIconClassEx)
				//span.navbar-toggler-icon

	.app-body
		.sidebar.bg-dark
			nav.sidebar-nav
				ul.nav
					if (!lndRpc)
						if (setupNeeded)
							li.nav-item
								a.nav-link(href='/')
									i.nav-icon.fas.fa-2x.fa-cog.me-2
									|	Setup

						else
							li.nav-item
								a.nav-link(href='/login')
									i.nav-icon.fas.fa-2x.fa-sign-in-alt.me-2
									|	Login

					else if (fullNetworkDescription == null)
						li.nav-item
							a.nav-link(href='javascript:void(0)')
								.spinner-border.spinner-border-sm.text-light.me-2(role="status")
								|	Loading...

					else
						li.nav-item
							a.nav-link(href='/')
								i.nav-icon.fas.fa-2x.fa-home.me-2
								|	Dashboard

						li.nav-title My Node
						li.nav-item
							a.nav-link(href='/wallet')
								i.nav-icon.fas.fa-wallet.me-2
								|	My Wallet
						li.nav-item
							a.nav-link(href='/local-channels')
								i.nav-icon.fas.fa-exchange-alt.me-2
								|	My Channels
						li.nav-item
							a.nav-link(href='/peers')
								i.nav-icon.fas.fa-users.me-2
								|	My Peers

						li.nav-title Lightning Payments
						li.nav-item
							a.nav-link(href='/invoices')
								i.nav-icon.fas.fa-sign-in-alt.me-2
								|	Invoices
						li.nav-item
							a.nav-link(href='/payment-history')
								i.nav-icon.fas.fa-sign-out-alt.me-2
								|	Payments Sent
						li.nav-item
							a.nav-link(href='/forwarding-history')
								i.nav-icon.fas.fa-angle-double-right.me-2
								|	Forwarding History

						li.nav-title Public Network
						li.nav-item
							a.nav-link(href='/nodes')
								i.nav-icon.fas.fa-network-wired.me-2
								|	All Nodes
						li.nav-item
							a.nav-link(href='/channels')
								i.nav-icon.fas.fa-globe-americas.me-2
								|	All Channels
						li.nav-item
							a.nav-link(href='/search')
								i.nav-icon.fas.fa-search.me-2
								|	Search

						li.nav-title Tools
						li.nav-item
							a.nav-link(href='/create-invoice')
								i.nav-icon.fas.fa-asterisk.me-2
								|	Create Invoice
						li.nav-item
							a.nav-link(href='/pay-invoice')
								i.nav-icon.fas.fa-receipt.me-2
								|	Pay Invoice
						if (false)
							li.nav-item
								a.nav-link(href='/send-payment')
									i.nav-icon.fas.fa-money-bill-wave.me-2
									|	Send Payment
						li.nav-item
							a.nav-link(href='/openchannel')
								i.nav-icon.fas.fa-plus-square.me-2
								|	Open Channel
						li.nav-item
							a.nav-link(href='/edit-multi-channel-policies')
								i.nav-icon.fas.fa-pen.me-2
								|	Bulk Edit Channels
						li.nav-item
							a.nav-link(href='/sign-verify')
								i.nav-icon.fas.fa-pen-nib.me-2
								|	Sign or Verify
						li.nav-item
							a.nav-link(href='/query-route')
								i.nav-icon.fas.fa-route.me-2
								|	Query Route
						li.nav-item
							a.nav-link(href='/lndconnect')
								i.nav-icon.fas.fa-mobile-alt.me-2
								|	LND Connect

						li.nav-title Technical
						li.nav-item
							a.nav-link(href='/error-log')
								i.nav-icon.fas.fa-exclamation-circle.me-2
								|	Error Log
							
			
			button.sidebar-minimizer.brand-minimizer(type='button')

		main.main.pb-4
			ol.breadcrumb.bg-main.text-body.rounded-0
				block breadcrumb
					li.breadcrumb-item
						a(href='/') Admin Home
					
				
				if (pageErrors && pageErrors.length > 0)
					include includes/page-errors-modal.pug

					li.breadcrumb-menu.d-md-down-none
						.alert.alert-danger.py-1.px-3.mb-n2.mt-n1.fw-bold(title=`This page encountered ${pageErrors.length.toLocaleString()} error(s). Click for details.` data-bs-toggle="tooltip")
							a.text-danger(href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#pageErrorsModal") Errors
							span.badge.badge-danger.ms-2 #{pageErrors.length.toLocaleString()}

			
			.container-fluid.mx-0.px-2.px-lg-3.px-xl-4
				if (userMessage)
					.alert.alert-dismissable.shadow-sm.mb-3(class=(userMessageType ? ("alert-"  + userMessageType) : "alert-info"), role="alert")
						span !{userMessage}

						a.btn-close(href="javascript:void(0)" aria-label="Close" data-bs-dismiss="alert" style="text-decoration: none;")

				else if (session.userMessage)
					.alert.alert-dismissable.shadow-sm.mb-3(class=(session.userMessageType ? ("alert-"  + session.userMessageType) : "alert-info"), role="alert")
						span !{session.userMessage}

						a.btn-close(href="javascript:void(0)" aria-label="Close" data-bs-dismiss="alert" style="text-decoration: none;")

				block content

				.modal.bd-example-modal-sm(id="switchLndModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true")
					.modal-dialog.modal-dialog-centered.modal-sm
						.modal-content
							.modal-body
								h5 Switching LND Nodes
								span After connecting to the new LND node the full public network is refreshed which often takes ~5-15 seconds...
								.text-center.mb-4.mt-5
									.spinner-border.text-primary(role="status" style="width: 3rem; height: 3rem;")
		
		if (true)	
			include includes/aside-menu.pug
	
	if (false)
		footer.app-footer
			div
				a(href='https://coreui.io') CoreUI
				span &copy; 2018 creativeLabs.
			.ms-auto
				span Powered by
				a(href='https://coreui.io') CoreUI

	
	script(src="/js/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN")
	script(src="/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV")

	//script(src="/js/fontawesome.min.js" integrity="sha384-ukiibbYjFS/1dhODSWD+PrZ6+CGCgf8VbyUH7bQQNUulL+2r59uGYToovytTf4Xm")
	
	script(src="/js/highlight.min.js")

	// CoreUI and necessary plugins
	script(src='/js/perfect-scrollbar.min.js')
	script(src='/js/coreui.min.js')

	// Plugins and scripts required by this view
	//script(src='vendors/chart.js/js/Chart.min.js')
	//script(src='vendors/@coreui/coreui-plugin-chartjs-custom-tooltips/js/custom-tooltips.min.js')
	//script(src='/js/main.js')

	script(src="/js/jdenticon.min.js" integrity="")

	script.
		$(document).ready(function() {
			$('[data-bs-toggle="tooltip"]').tooltip({placement:"top"});
			$('[data-bs-toggle="popover"]').popover({html:true, container:"body"});

			for (var i = 0; i < documentReadyFunctions.length; i++) {
				documentReadyFunctions[i]();
			}
		});

		hljs.initHighlightingOnLoad();

	block endOfBody
