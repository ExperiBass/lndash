extends layout

block headContent
	title My Wallet

block breadcrumb
	li.breadcrumb-item
		a(href='/') Home
	li.breadcrumb-item My Node
	li.breadcrumb-item My Wallet
	
block content
	if (!session.admin)
		+pageTitle("My Wallet")
		h1.h3 My Wallet
		hr

		- var loginRequiredNote = "display details about this node's wallet.";
		include includes/login-required-alert.pug

	else


		- var unconfirmedTxCount = 0;
		each tx, index in onChainTransactions.transactions
			if (tx.num_confirmations == 0)
				- unconfirmedTxCount++;

		- var confirmedTxCount = (onChainTransactions.transactions.length - unconfirmedTxCount);

		+contentSection("Wallet Summary")
			+summaryRow(3 + ((walletBalance && walletBalance.unconfirmed_balance > 0) ? 1 : 0))

				+summaryItem("Balance", "The value in your wallet that's not currently committed to any payment channels.")
					if (walletBalance)
						- var currencyValue = new Decimal(walletBalance.confirmed_balance).dividedBy(coinConfig.baseCurrencyUnit.multiplier);
						include includes/value-display.pug

					else
						span.border-dotted.text-warning(title="Failed to get wallet balance. See the Error Log for possible details." data-bs-toggle="tooltip") Unknown


				if (walletBalance && walletBalance.unconfirmed_balance > 0)
					+summaryItem("Unconfirmed Balance", "The value in your wallet that's unconfirmed on the blockchain.")
						- var currencyValue = new Decimal(walletBalance.unconfirmed_balance).dividedBy(coinConfig.baseCurrencyUnit.multiplier);
						include includes/value-display.pug


				+summaryItem("UTXOs", "Number of unspent transaction outputs.")
					if (walletUtxosResponse)
						span #{walletUtxosResponse.utxos.length.toLocaleString()}

					else
						span.border-dotted.text-warning(title="Failed to get wallet UTXOs. See the Error Log for possible details." data-bs-toggle="tooltip") Unknown


				+summaryItem("Transactions")
					| #{confirmedTxCount.toLocaleString()}

							

		+contentSection("Tools")
			a.btn.btn-primary.me-0.me-lg-2.mb-2.mb-lg-0.d-block.d-lg-inline-block(href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#newDepositAddressModal")
				i.fas.fa-qrcode.me-2
				span New Deposit Address...
			a.btn.btn-primary.me-0.me-lg-2.mb-2.mb-lg-0.d-block.d-lg-inline-block(href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#withdrawFundsModal")
				i.fas.fa-external-link-alt.me-2
				span Withdraw Funds...
				

		if (false)
			pre
				code.json.bg-light #{JSON.stringify(walletUtxosResponse, null, 4)}
		
		if (walletUtxosResponse && walletUtxosResponse.utxos && walletUtxosResponse.utxos.length > 0)
			+contentSection(`${walletUtxosResponse.utxos.length.toLocaleString()} UTXO${walletUtxosResponse.utxos.length == 1 ? "" : "s"}`)
				each utxo, utxoIndex in walletUtxosResponse.utxos
					- delete utxo.outpoint.txid_bytes;
					include includes/wallet-utxo-details-modal.pug

				.table-responsive
					table.table.table-striped
						thead
							tr
								th.text-end #
								
								if (false)
									th Type

								th
									span.border-dotted(title="The transaction ID [output index] for this UTXO." data-bs-toggle="tooltip") Outpoint
								
								th Address
								
								if (false)
									th Pubkey Script

								th.text-end Amount

								th.text-end Confirmations
								
								th Details

						tbody
							each utxo, utxoIndex in walletUtxosResponse.utxos
								tr
									th.text-end #{(utxoIndex + 1).toLocaleString()}

									if (false)
										td #{utxo.type}
									td
										- var btc_txid = utxo.outpoint.txid_str;

										if (config.blockExplorerUrl)
											a(href=`${config.blockExplorerUrl}/tx/${btc_txid}`, title=btc_txid, data-bs-toggle="tooltip")
												include includes/btc-txid.pug
										else
											span(title=tx.tx_hash, data-bs-toggle="tooltip")
												include includes/btc-txid.pug

										span  [#{utxo.outpoint.output_index}]

									td
										- var btc_address = utxo.address;

										if (config.blockExplorerUrl)
											a(href=`${config.blockExplorerUrl}/address/${btc_address}`, title=btc_address, data-bs-toggle="tooltip")
												include includes/btc-address.pug
										else
											span(title=btc_address, data-bs-toggle="tooltip")
												include includes/btc-address.pug

									if (false)
										td
											- var btc_address = utxo.pk_script;
											span.border-dotted(title=btc_address data-bs-toggle="tooltip")
												include includes/btc-address.pug

									td.text-end
										- var currencyValue = new Decimal(utxo.amount_sat).dividedBy(coinConfig.baseCurrencyUnit.multiplier);
										include includes/value-display.pug

									td.text-end #{parseInt(utxo.confirmations).toLocaleString()}
										
									
									td
										a(href="javascript:void(0)" data-bs-toggle="modal" data-bs-target=("#utxoModal-" + utxoIndex)) Details



		each tx, txIndex in onChainTransactions.transactions
			include includes/wallet-tx-details-modal.pug

		
		- var totalTxCount = confirmedTxCount + unconfirmedTxCount;
		if (totalTxCount > 0)
			+contentSection(`${totalTxCount.toLocaleString()} Transaction${totalTxCount == 1 ? "" : "s"}`)
				.table-responsive
					table.table.table-striped
						thead
							tr
								th.text-end #
								th Txid
								
								th
									span.border-dotted(title="If applicable, show the channel actions associated with the transaction.", data-bs-toggle="tooltip") Channel Actions
								

								th.text-end
									if (false)
										span Block /
										br
									span Confirmations
								
								th Date

								th.text-end Amount

								th Addresses
								
								th Details

						
						tbody
							//- onChainTransactions.transactions.reverse();
							each tx, txIndex in onChainTransactions.transactions
								tr
									th.text-end #{(txIndex + 1).toLocaleString()}

									td.table-col-text
										if (config.blockExplorerUrl)
											a(href=`${config.blockExplorerUrl}/tx/${tx.tx_hash}`, target="_blank", title=tx.tx_hash, data-bs-toggle="tooltip")
												- var btc_txid = tx.tx_hash;
												include includes/btc-txid.pug
										else
											span(title=tx.tx_hash, data-bs-toggle="tooltip")
												- var btc_txid = tx.tx_hash;
												include includes/btc-txid.pug

									td
										if (localChannels.byTxid[tx.tx_hash] != null)
											span.text-success Opened channel:
											br
											a(href=`/channel/${localChannels.byTxid[tx.tx_hash].chan_id}`) #{localChannels.byTxid[tx.tx_hash].chan_id}

										else if (closedChannels.byTxid[tx.tx_hash] != null)
											span.text-success Opened channel:
											br
											span #{closedChannels.byTxid[tx.tx_hash].chan_id} 
												span.text-muted (closed)

										else
											- var channelClosedByTx = false;
											each chan in closedChannels.channels
												if (chan.closing_tx_hash == tx.tx_hash)
													- channelClosedByTx = true;
													span.text-danger Closed channel:
													br
													span #{chan.chan_id} 
														span.text-muted (closed)

											if (!channelClosedByTx)
												span -

									td(class="table-col-int text-end")
										if (tx.num_confirmations > 0)
											if (false)
												if (config.blockExplorerUrl)
													a(href=`${config.blockExplorerUrl}/block-height/${tx.block_height}`, target="_blank") #{parseInt(tx.block_height).toLocaleString()}
												else
													span(title=tx.tx_hash, data-bs-toggle="tooltip") #{parseInt(tx.block_height).toLocaleString()}

												br

											span #{tx.num_confirmations.toLocaleString()}

										else
											span.text-warning Unconfirmed

									td(class="table-col-time")
										- var timeAgo = moment.duration(moment.utc(new Date()).diff(moment.utc(new Date(parseInt(tx.time_stamp) * 1000))));
										- var dateTimeUtc = moment.utc(new Date(parseInt(tx.time_stamp) * 1000)).format("Y-MM-DD HH:mm:ss");

										span.border-dotted(title=(dateTimeUtc + " utc") data-bs-toggle="tooltip") #{timeAgo.humanize()} ago

									td(class="table-col-currencyvalue text-end")
										- var currencyValue = new Decimal(Math.abs(parseInt(tx.amount))).dividedBy(coinConfig.baseCurrencyUnit.multiplier);
										if (parseInt(tx.amount) > 0)
											div(class="text-success")
												span +
												include ./includes/value-display.pug
										else if (parseInt(tx.amount) < 0)
											div(class="text-danger")
												span -
												include ./includes/value-display.pug
										else
											span -

									td(class="table-col-text")
										if (config.blockExplorerUrl)
											each addr, addrIndex in tx.dest_addresses
												a.border-dotted(href=`${config.blockExplorerUrl}/address/${addr}`, target="_blank", title=addr, data-bs-toggle="tooltip")
													- var btc_address = addr;
													include includes/btc-address.pug
												br
										else
											each addr, addrIndex in tx.dest_addresses
												span(title=addr, data-bs-toggle="tooltip")
													- var btc_address = addr;
													include includes/btc-address.pug
												br

									td
										a(href="javascript:void(0)" data-bs-toggle="modal" data-bs-target=("#txModal-" + tx.tx_hash)) Details



		include includes/new-deposit-address-modal.pug

		include includes/withdraw-funds-modal.pug

		if (false)
			pre
				code.json.bg-light #{JSON.stringify(walletBalance, null, 4)}

			pre
				code.json.bg-light #{JSON.stringify(channelBalance, null, 4)}